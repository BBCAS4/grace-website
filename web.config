<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.js\/debug[\/]?" />
        </rule>
        <!-- Handle Next.js static files -->
        <rule name="Next.js Static Files" stopProcessing="true">
          <match url="^_next/(.*)$" />
          <action type="Rewrite" url="_next/{R:1}" />
        </rule>
        <!-- Handle public static files -->
        <rule name="Public Static Files" stopProcessing="true">
          <match url="^(favicon\.ico|robots\.txt|sitemap\.xml|.*\.(png|jpg|jpeg|gif|svg|ico|css|js|woff|woff2|ttf|eot))$" />
          <action type="Rewrite" url="public/{R:0}" />
        </rule>
        <!-- Handle all other requests -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
    <iisnode watchedFiles="web.config;*.js"/>
    <defaultDocument>
      <files>
        <clear />
        <add value="server.js" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>